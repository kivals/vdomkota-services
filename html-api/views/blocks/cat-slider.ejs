<section class="cat-slider">
    <div class="cat-slider__container _container">
        <div class="cat-slider__body _swiper">
            <% for(var cat of cats) { %>
                <article class="cat-slider__slide slide-cat">
                    <div class="slide-cat__body">
                        <div class="slide-cat__image _ibg">
                            <picture>
                                <source srcset="<%= cat.photoPath %>.webp" type="image/webp">
                                <img src="<%= cat.photoPath %>.jpg" alt="Котик <%= cat.name %>">
                            </picture>
                        </div>
                        <div class="slide-cat__name"><%= cat.name %></div>
                        <a href="/cats/<%= cat.alias %>" class="slide-cat__button btn">подробнее</a>
                    </div>
                </article>
            <% }%>
        </div>
        <div class="cat-slider__arrows slider-arrows">
            <button type="button" class="slider-arrows__item slider-arrows__item_prev _icon-arrow"></button>
            <button type="button" class="slider-arrows__item slider-arrows__item_next _icon-arrow"></button>
        </div>
        <div class="cat-slider__dots"></div>
    </div>
</section>
